<!DOCTYPE html>
<html class="html-topic-detail">
<head>
    <%- include('Public/common_header',{pageTitle: data.pageTitle}); %>
    <%- include('Public/common_header_end'); %>
</head>
<body>
<%- include('Public/header'); %>
<div class="halo-search case topicDetail">
    <%- include('Public/search_nav',{baseUrl:data.baseUrl}); %>
    <div class="content-box">
        <div class="container">
            <div class='col-md-12'>
                <div class="content-title">
                    <h1 class="f-22"><%=data.title%></h1>
                    <div class="title-desc-icon inline-style">
                        <ul class="desc-list">
                            <li class="desc-list-item f-10"><span class="glyphicon glyphicon-eye-open"></span><span class="desc-list-item-num"><%=data.views%></span></li>
                            <li class="desc-list-item f-10"><span class="glyphicon glyphicon-heart-empty"></span><span id="desc-list-item-num-points" class="desc-list-item-num"><%=data.points%></span></li>
                            <li class="desc-list-item f-10"><span class="glyphicon glyphicon-comment"></span><span id="desc-list-item-num-comments" class="desc-list-item-num"><%=data.comments%></span></li>
                        </ul>
                    </div>
                </div>

                <div class="content-block">
                    <div class="content-topic">
                        <img src="<%=data.default_image%>" alt="">
                        <p><%=data.description%></p>
                    </div>


                    <% data.case.length&&data.case.forEach(function(item){ %>
                    <div class="content-item">

                        <%if(item.company){%>
                        <div class="item-cycle">
                            <a href="/company/detail/<%= item.company_id%>"><img src="<%=item.company.logo%>" alt=""></a>
                        </div>
                        <a href="/company/detail/<%= item.company_id%>"><p><%=item.company.name%></p></a>
                        <%}%>

                        <h4 class="f-20"><%=item.title%></h4>
                        <div class="content-pic">
                            <% item.images.forEach(function(img){ %>
                            <img src="<%=img%>" alt="">
                            <%})%>
                        </div>
                        <p class="content-desc"><%=item.description%></p>
                        <a href="/case/detail/<%=item.case_id%>" class="more">查看案例 <span>></span> </a>
                    </div>
                    <%})%>



                    <div class="detail-content-commit" >
                        <form id="commit-form">
                            <div class="textarea-wrapper">
                                <textarea id="commit-form-content" class="f-14" rows="5"></textarea>
                                <p class="f-14">还可以输入<span class="num">500</span>个字</p>
                            </div>
                            <div class="btn-group">
                                <a id="markThis-comment" >
                                    <span class="glyphicon glyphicon-heart-empty f-22"></span><span>+1</span>
                                </a>
                                <a id="unMarkThis-comment" style="display: none;" >
                                    <span class="glyphicon glyphicon-heart-empty f-22"></span><span>-1</span>
                                </a>
                                <button  class="btn submit-btn" type="submit">评&nbsp;论</button>
                            </div>
                        </form>
                        <div id="commit-box" class="commit-box"></div>
                        <div class="detail-comments-page">
                            <ul id="comment-pagination" class="piuture-detail"></ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<%- include('Public/ModalDialog'); %>
<%- include('Public/footer'); %>
<%- include('Public/common_footer'); %>


<script>
    $(function(){
        "use strict";
        window.appData = <%- JSON.stringify(data) %>;
//        app.getStaticData();
        app.index.lazy();
        app.index.nav();
        app.index.indexInit();
        app.index.register();
        app.index.zcBtn();
        app.index.uiForms();
        app.index.login();
        app.index.summitHover();
        app.index.loginInit();
        app.topicDetail.collect();
        app.topicDetail.getComments();
        app.topicDetail.comment();
    })


</script>
</body>
</html>


