<!DOCTYPE html>
<html>
<head>
    <%- include('Public/common_header',{pageTitle: data.pageTitle}); %>
    <%- include('Public/common_header_end'); %>
</head>
<body>
<%- include('Public/header'); %>
<div class="halo-search caseDetail pictureDetail">
    <%- include('Public/search_nav',{baseUrl:data.baseUrl}); %>
    <div class="case-detail-block">
        <div class="container">
            <div class="col-md-9 detail-content-wrapper">
                <div class="detail-content-article">
                    <div class="content-pic-box">
                        <img src="<%=data.path%>" alt="" class="no-margin-top"/>
                    </div>
                </div>
                <div class="detail-content-topic">
                    <div class="detail-content-title">
                        <div class="content-title-desc">
                            <div class="title-desc-icon inline-style">
                                <ul class="desc-list">
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-eye-open"></span><span class="desc-list-item-num"><%=data.views%></span></li>
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-heart-empty"></span><span id="desc-list-item-num-points" class="desc-list-item-num"><%=data.points%></span></li>
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-comment"></span><span id="desc-list-item-num-comments" class="desc-list-item-num"><%=data.comments%></span></li>
                                </ul>
                            </div>
                            <div class="title-desc-color inline-style">
                                <div class="color-liner">
                                    <% data.colorArr.forEach(function(n,i){ %>
                                    <a class="color" href="/picture?color=<%= data.colorArr[i].substring(1) %>" style="background:<%= data.colorArr[i] %>"></a>
                                    <% }) %>
                                </div>
                            </div>

                            <div class="title-desc-txt block-style">
                                <% data.tagArr.forEach(function(item){ %>
                                <a  href="<%= data.baseUrl %>?tag=<%= item %>" class="f-12 tag picture"><%= item %></a>
                                <% }) %>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="detail-content-commit">
                    <form id="commit-form">
                        <div class="textarea-wrapper">
                            <textarea id="commit-form-content" class="f-14" rows="5"></textarea>
                            <p class="f-14">还可以输入<span class="num">500</span>个字</p>
                        </div>
                        <div class="btn-group">
                            <a id="markThis-comment" >
                                <span class="glyphicon glyphicon-heart-empty f-22"></span><span>+1</span>
                            </a>
                            <a id="unMarkThis-comment" style="display: none;" >
                                <span class="glyphicon glyphicon-heart-empty f-22"></span><span>-1</span>
                            </a>
                            <button  class="btn submit-btn" type="submit">评&nbsp;论</button>
                        </div>
                    </form>
                    <div id="commit-box" class="commit-box"></div>
                    <div class="detail-comments-page">
                        <ul id="comment-pagination" class="piuture-detail"></ul>
                    </div>
                </div>


            </div>
            <div class="col-md-3">
                <%if(data.company.id){%>
                <div class="case-detail-list">
                    <a class="detail-list-company picture" href="/company/detail/<%=data.company.id%>">
                        <div class="company-img">
                            <img class="img" src="<%=data.company.logo%>" alt=""/>
                        </div>
                        <div class="company-desc">
                            <div class="f-14 name">
                                <%=data.company.name%>
                            </div>
                            <div class="f-12 cases">
                                查看全部<%=data.company.cases%>个案例
                            </div>
                        </div>
                    </a>
                </div>
                <%}%>

                <div class="detail-list-num">
                    <div id="markThis-sidebar" class="desc-like piuture f-14" >
                        <p class="f-12">喜欢</p>
                        <p class="f-16"><%=data.points%></p>
                    </div>
                    <div id="unMarkThis-sidebar" class="desc-like f-14" style="display: none;">
                        <p class="f-12">取消收藏</p>
                        <p class="f-16"><%=data.points+1%></p>
                    </div>
                    <div class="desc-comment f-14">
                        <p class="f-12">评论</p>
                        <p id="comments-sidebar" class="f-16"><%=data.comments%></p>
                    </div>
                </div>
                <% if(data.case.data.length>0){ %>
                <div class="other-like-case">
                    <h4 class="f-16">案例所有图片</h4>
                    <div class="other-case-block">
                        <% for(var i=0;i<data.case.data.length;i+=2){  %>
                        <div class="case-item">
                            <a href="/picture/detail/<%=data.case.data[i].id%>" class="case-pic">
                                <img src="<%=data.case.data[i].path%>" alt=""/>
                            </a>
                            <% if(i<data.case.data.length-1){ %>
                            <a href="/picture/detail/<%=data.case.data[i+1].id%>" class="case-pic">
                                <img src="<%=data.case.data[i+1].path%>" alt=""/>
                            </a>
                            <%}%>
                        </div>
                        <%}%>
                        <!--<div class="case-item">-->
                            <!--<div class="case-pic">-->
                                <!--<img src="/images/img9.jpg" alt=""/>-->
                            <!--</div>-->
                            <!--<div class="case-pic">-->
                                <!--<img src="/images/img9.jpg" alt=""/>-->
                            <!--</div>-->
                        <!--</div>-->
                    </div>
                </div>
                <%}%>

                <% if(data.xiangsi.length>0){ %>
                <div class="other-like-case">
                    <h4 class="f-16">其它相似图片</h4>
                    <div class="other-case-block">
                        <% for(var i=0;i<data.xiangsi.length;i+=2){  %>
                        <div class="case-item">
                            <a href="/picture/detail/<%=data.xiangsi[i].id%>" class="case-pic">
                                <img src="<%=data.xiangsi[i].path%>" alt=""/>
                            </a>
                            <% if(i<data.xiangsi.length-1){ %>
                            <a href="/picture/detail/<%=data.xiangsi[i+1].id%>" class="case-pic">
                                <img src="<%=data.xiangsi[i+1].path%>" alt=""/>
                            </a>
                            <%}%>
                        </div>
                        <%}%>

                        <!--<div class="case-item">-->
                            <!--<div class="case-pic">-->
                                <!--<img src="/images/img9.jpg" alt=""/>-->
                            <!--</div>-->
                            <!--<div class="case-pic">-->
                                <!--<img src="/images/img9.jpg" alt=""/>-->
                            <!--</div>-->
                        <!--</div>-->
                    </div>
                </div>
                <%}%>

            </div>
        </div>
    </div>
</div>

    <%- include('Public/ModalDialog'); %>
    <%- include('Public/footer'); %>
    <%- include('Public/common_footer'); %>




<script>
    $(function(){
        "use strict";
        window.appData = <%- JSON.stringify(data) %>;
//        app.getStaticData();
        app.index.lazy();
        app.index.nav();

        app.index.indexInit();
        app.index.register();
        app.index.zcBtn();
        app.index.uiForms();
        app.index.login();
        app.index.summitHover();
        app.index.loginInit();
        app.common.verticalMiddle("commit-text-item","item-pic");
        app.common.commitForm();
        app.picureDetail.collect();
        app.picureDetail.getComments();
        app.picureDetail.comment();

    })


</script>
</body>
</html>



