<!DOCTYPE html>
<html>
<head>
    <%- include('Public/common_header',{pageTitle: data.pageTitle}); %>
    <%- include('Public/common_header_end'); %>
</head>
<body>
<%- include('Public/header'); %>
<div class="halo-search caseDetail">
    <%- include('Public/search_nav',{baseUrl:data.baseUrl}); %>
    <div class="case-detail-block">
        <div class="container">
            <div class="col-md-9 detail-content-wrapper">
                <div class="detail-content-topic">
                    <div class="detail-content-title">
                        <h1 class="f-22"><%= data.title %></h1>
                        <div class="content-title-desc">
                            <div class="title-desc-icon inline-style">
                                <ul class="desc-list">
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-eye-open"></span><span class="desc-list-item-num"><%=data.views%></span></li>
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-comment"></span><span class="desc-list-item-num"><%=data.comments%></span></li>
                                    <li class="desc-list-item f-10"><span class="glyphicon glyphicon-heart-empty"></span><span class="desc-list-item-num"><%=data.points%></span></li>
                                </ul>
                            </div>
                            <div class="title-desc-color inline-style">
                                 <div class="color-liner">
                                     <% data.colorArr.forEach(function(n,i){ %>
                                     <span style="background:<%= n %>"></span>
                                     <% }) %>
                                 </div>
                            </div>
                            <% if(data.tag.length>0) {%>
                                <div class="title-desc-txt block-style">
                                    <% data.tagArr.forEach(function(n,i){ %>
                                    <a class="f-12 tag case" href="<%= data.baseUrl %>?tag=<%= n %>"><%= n %></a>
                                    <% }) %>
                                </div>
                            <% } %>

                        </div>
                    </div>
                </div>
                <div class="detail-content-article">
                    <div class="content-pic-box">
                        <img src="<%= data.cover %>" alt=""/>
                        <% data.attachArr.forEach(function(n,i){%>
                            <img src="<%= n %>">
                        <%})%>
                    </div>
                    <div class="content-desc-box">
                        <p><%= data.content%></p>
                    </div>
                </div>
                <div class="detail-content-commit">
                    <form action="" id="commit-form">
                        <div class="textarea-wrapper">
                            <textarea class="f-14" name="" rows="5"></textarea>
                            <p class="f-14">还可以输入<span class="num">500</span>个字</p>
                        </div>
                        <div class="btn-group">
                            <a ><span class="glyphicon glyphicon-heart-empty f-22"></span><span>+1</span></a>
                            <button  class="btn submit-btn" type="submit">评&nbsp;论</button>
                        </div>
                    </form>
                    <div class="commit-box">
                        <p class="commit-num f-14">16条评论</p>
                        <div class="commit-text">

                                <div class="text-item-wrapper">
                                    <div class="commit-text-item">
                                        <div class="item-pic">
                                            <img src="/images/img10.jpg" alt=""/>
                                        </div>
                                        <div class="item-desc">
                                            <p><span class="name f-16">李达键</span><span class="f-12">1天前</span></p>
                                            <p class="f-16">好有感觉的一场婚礼</p>
                                        </div>
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="case-detail-list">
                    <a class="detail-list-company case" href="/company/detail/<%=data.company.id%>">
                        <div class="company-img">
                            <img src="<%= data.company.logo %>" alt=""/>
                        </div>
                        <div class="company-desc">
                            <div class="f-14 name">
                                <%=data.company.name%>
                            </div>
                            <div class="f-12 cases">
                                查看全部<%=data.company.cases%>个案例
                            </div>
                        </div>
                    </a>
                </div>
                <div class="detail-list-num">
                    <div class="desc-like case f-14">
                        <p class="f-12">喜欢</p>
                        <p class="f-16"><%=data.points%></p>
                    </div>
                    <div class="desc-comment f-14">
                        <p class="f-12">评论</p>
                        <p class="f-16"><%=data.comments%></p>
                    </div>
                </div>
                <% if(data.xiangsi.length>0){ %>
                <div class="other-like-case">
                    <h4 class="f-16">其它相似案例</h4>
                    <div class="other-case-block">
                        <% data.xiangsiImg.forEach(function(n,i){ %>
                            <div class="case-item">
                                <div class="case-pic">
                                    <a href="<%= data.xiangsi[i].id %>"><img src="<%= n %>" alt=""/></a>
                                </div>
                                <div class="case-desc">
                                    <a href="case/detail/<%= data.xiangsi[i].id %>"><p class="f-14 desc_title"><%= data.xiangsi[i].title %></p></a>
                                    <p class="f-14 desc_company"><%= data.xiangsi[i].company %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>
                <div class="other-like-case">
                    <h4 class="f-16">公司其它案例</h4>
                    <div class="other-case-block">
                        <% data.otherImg.forEach(function(n,i){ %>
                        <div class="case-item">
                            <div class="case-pic">
                                <a href="<%= data.other[i].id %>"><img src="<%= data.otherImg[i] %>" alt=""/></a>
                            </div>
                            <div class="case-desc">
                                <a href="case/detail/<%= data.other[i].id %>"><p class="f-14 desc_title"><%= data.other[i].title %></p></a>
                                <p class="f-14 desc_company"><%= data.other[i].company %></p>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('Public/ModalDialog'); %>
    <%- include('Public/footer'); %>
    <%- include('Public/common_footer'); %>
<script src="../public/js/app.caseDetail.js"></script>

<script>
    $(function(){
        app.index.lazy();
        app.index.nav();

        app.index.indexInit();
        app.index.register();
        app.index.zcBtn();
        app.index.uiForms();
        app.index.login();
        app.index.summitHover();
        app.index.loginInit();
        app.common.verticalMiddle("case-item","case-desc");
        app.common.verticalMiddle("commit-text-item","item-pic");
        app.common.commitForm();
        app.common.omit("desc_title",8);
        app.common.omit("desc_company",8);

    })


</script>
</body>
</html>


